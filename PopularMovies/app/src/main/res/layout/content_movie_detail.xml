<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wasim.popularmovies.MovieDetail"
    tools:showIn="@layout/activity_movie_detail">


    <ImageView
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewBack"
        android:scaleType="centerCrop"
        />

    <TextView
        android:text="   MOVIE TITLE"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="150dp"
        android:gravity="left|center"
        android:layout_alignParentTop="true"
        android:id="@+id/titleView"
        android:textSize="40sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:id="@+id/imageView" />

    <TextView
        android:text="2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/releaseD"
        android:textSize="20sp" />


    <TextView
        android:text="8.1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/releaseD"
        android:layout_alignLeft="@+id/releaseD"
        android:layout_alignStart="@+id/releaseD"
        android:layout_marginTop="10dp"
        android:id="@+id/rating"
        android:textSize="20sp" />

    <Button
        android:text="ðŸ’—"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating"
        android:layout_alignLeft="@+id/rating"
        android:layout_alignStart="@+id/rating"
        android:id="@+id/button"
        android:layout_alignRight="@+id/rating"
        android:layout_alignEnd="@+id/rating"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="25sp" />

    <TextView
        android:text="PLOT SYNOPSIS GOES HERE"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="19dp"
        android:id="@+id/synopsis"
        android:layout_width="match_parent" />

</RelativeLayout>
